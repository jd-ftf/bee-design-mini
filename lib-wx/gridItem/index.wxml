<view 
	class="wd-grid-item {{ border && !gutter ? itemClass : '' }} custom-class" 
	bindtap="click" 
	style="{{ style }}"
	>
	<view 
		class="wd-grid-item__content {{ square ? 'is-square' : '' }} {{ (border && gutter > 0) ? 'is-round' : '' }}" 
		style="{{ gutterContentStyle }}"
		>
		<slot wx:if="{{ useSlot }}" />
		<block wx:else>
			<wd-badge 
				custom-class="badge" 
				is-dot="{{ isDot }}" 
				value="{{ value }}" 
				max="{{ max }}" 
				type="{{ type }}"
				>
				<slot wx:if="{{ useIconSlot }}" name="icon"/>
				<wd-icon wx:else name="{{ icon }}" size="{{ iconSize }}" class="custom-icon" />
			</wd-badge>
			<slot name="text" wx:if="{{ useTextSlot }}"/>
			<view wx:else class="wd-grid-item__text custom-text">{{ text }}</view>
		</block>
	</view>
</view>
