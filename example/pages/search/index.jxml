<demo-block title="基本用法" transparent>
  <wd-search value="{{value1}}"/>
</demo-block>

<demo-block title="白色输入框" transparent>
  <wd-search light/>
</demo-block>

<demo-block title="搜索占位符居左" transparent>
  <wd-search placeholder-left/>
</demo-block>

<demo-block title="禁用且隐藏取消按钮" transparent>
  <wd-search disabled hide-cancel/>
</demo-block>

<demo-block title="自定义" transparent>
  <wd-search placeholder="请输入订单号/订单名称" cancel-txt="搜索"/>
</demo-block>

<demo-block title="插槽" transparent>
  <wd-search use-label-slot use-action-slot>
    <view slot="label" style="line-height: 14px;margin-right: 10px;">左侧</view>
    <view slot="action" style="padding: 5px 10px;color: #ff0000;">右侧</view>
  </wd-search>
</demo-block>

<demo-block title="设置最大长度" transparent>
  <wd-search value="{{value2}}" maxlength="4"/>
</demo-block>