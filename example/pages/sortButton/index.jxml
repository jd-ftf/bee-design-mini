<demo-block title="基础用法">
  <wd-sort-button value="{{ value1 }}" title="价格" bind:change="handleChange1"/>
</demo-block>

<demo-block title="设置 allow-reset 允许重置按钮">
  <wd-sort-button value="{{ value2 }}" title="价格" allow-reset bind:change="handleChange2"/>
</demo-block>

<demo-block title="设置 desc-first 优先切换为降序">
  <wd-sort-button value3="{{ value3 }}" title="价格" desc-first bind:change="handleChange3"/>
</demo-block>